    pod 'Balizinha', :git => 'https://bitbucket.org/renderapps/balizinha-pod', :tag => '0.2.0'

    pod 'Crashlytics'
    pod 'Fabric'

    pod 'RxSwift'
    pod 'RxCocoa'
    pod 'RxOptional'

    pod 'FBSDKCoreKit'
    pod 'FBSDKLoginKit'
    pod 'FBSDKShareKit'
    pod 'DateTools'

    pod 'Batch'

    pod 'Stripe'

    target 'BalizinhaTests' do
       inherit! :search_paths
    end

end

